# ======================
# PRIMARY LLM API KEY
# ======================
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ======================
# LLM FALLBACK API KEYS (Optional but recommended for production)
# ======================
# SambaNova (Fallback 1) - Same Llama 3.1 8B model, $5 free credit
# Get from: https://cloud.sambanova.ai/
SAMBANOVA_API_KEY=your_sambanova_api_key_here

# OpenRouter (Fallback 2) - Multiple free models (DeepSeek R1, Llama 4, etc.)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Hugging Face (Fallback 3) - FREE forever, 800K+ models, no credit card!
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# ======================
# OTHER API KEYS
# ======================
# OpenAI (for Whisper STT)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini (for Vision/Image processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=llama3-8b-8192
GEMINI_VISION_MODEL=gemini-1.5-flash

# ======================
# DATABASE CONFIGURATION
# ======================
# Supabase PostgreSQL Database
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# ======================
# VECTOR DATABASE
# ======================
VECTOR_DB_PATH=./data/chroma_db
COLLECTION_NAME=pdf_documents

# Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ======================
# REDIS CONFIGURATION
# ======================
# Upstash (Production - Serverless)
# Get from: https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Local Redis (Development - Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Cache Settings
QUERY_CACHE_TTL=3600
SESSION_TTL=86400
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600

# ======================
# TEXT-TO-SPEECH SETTINGS
# ======================
# Speech speed: 1.0 = normal, 1.25 = 25% faster (recommended), 1.5 = 50% faster, 2.0 = double speed
TTS_SPEED_MULTIPLIER=1.75

# Azure Neural TTS (Optional - Premium quality, 5M characters/month free)
# Get from: https://portal.azure.com (Cognitive Services - Speech)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# ======================
# MONITORING & ERROR TRACKING
# ======================
# Sentry (Error Tracking) - Free tier: 5K errors/month
# Get from: https://sentry.io/signup/
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# PostHog (Analytics) - Free tier: 1M events/month
# Get from: https://posthog.com/signup
POSTHOG_API_KEY=your_posthog_api_key_here

# ======================
# EMAIL SERVICE
# ======================
# Resend (Email Service) - Free tier: 3,000 emails/month
# Get from: https://resend.com/signup
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# ======================
# FRONTEND CONFIGURATION
# ======================
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ======================
# SECURITY
# ======================
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development

# ======================
# SERVER CONFIGURATION
# ======================
PORT=8080
