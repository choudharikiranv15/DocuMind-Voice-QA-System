# ======================
# PRIMARY LLM API KEY
# ======================
# Get your API key from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ======================
# LLM FALLBACK API KEYS (Optional but recommended for production)
# ======================
# SambaNova (Fallback 1) - Same Llama 3.1 8B model, $5 free credit
# Get from: https://cloud.sambanova.ai/
SAMBANOVA_API_KEY=your_sambanova_api_key_here

# OpenRouter (Fallback 2) - Multiple free models (DeepSeek R1, Mistral, etc.)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Hugging Face (Fallback 3) - FREE forever, 800K+ models, no credit card!
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# ======================
# OTHER API KEYS
# ======================
# OpenAI API (for Whisper STT fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API (for vision and image understanding)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_VISION_MODEL=gemini-1.5-flash

# ======================
# MODEL CONFIGURATION
# ======================
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=llama3-8b-8192

# ======================
# DATABASE SETTINGS
# ======================
VECTOR_DB_PATH=./data/chroma_db
COLLECTION_NAME=pdf_documents

# ======================
# PROCESSING SETTINGS
# ======================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ======================
# REDIS CONFIGURATION (Production - Serverless)
# ======================
# Upstash Redis - Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Local Redis (Development - Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ======================
# CACHE SETTINGS
# ======================
QUERY_CACHE_TTL=3600
SESSION_TTL=86400
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600

# ======================
# SUPABASE CONFIGURATION
# ======================
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ======================
# PRODUCTION SETTINGS
# ======================
# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
# For development: http://localhost:5173,http://localhost:3000
# For production: https://your-app.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Port
PORT=8080